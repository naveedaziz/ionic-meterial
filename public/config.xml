<!---- for android ---->
<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.retailer.dom"
		versionCode = "400"
		CFBundleVersion = "2.6.0.1"
        version     = "2.6.0.1" >

<!---- for ios ---->
<!--<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.retailer.dominos"
		CFBundleVersion = "1.0.10"
        version     = "1.0.10" >-->

    <!-- versionCode is optional and Android only -->
    <icon src="icon.png" />
	<splash src="splash.png" />

	

	<!-- Plugins -->

	<!-- Core plugins -->
	<gap:plugin name="org.apache.cordova.inappbrowser" />
	<gap:plugin name="cordova-plugin-customurlscheme" source="npm">
	 <param name="URL_SCHEME" value="dominos" />
	</gap:plugin>
	<gap:plugin name="org.apache.cordova.network-information" />
	<plugin name="nl.x-services.plugins.ioswebviewcolor" spec="1.0" source="pgb" />
	<plugin name="org.apache.cordova.statusbar" source="pgb" />

	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance" overwrite="true">
    <false/>
	</gap:config-file>

	<gap:plugin name="cordova-plugin-whitelist" source="npm" version="~1" />
	<gap:plugin name="org.apache.cordova.splashscreen" version="0.2.7" />
	<preference name="phonegap-version" value="cli-6.3.0" />

	<feature name="SplashScreen">
        <param name="ios-package" value="CDVSplashScreen"/>
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen"/>
        <param name="onload" value="true"/>
    </feature>

	 <gap:splash src="res/screen/ios/320x480.png" gap:platform="ios" width="320" height="480"/>
	 <gap:splash src="res/screen/ios/640x960.png" gap:platform="ios" width="640" height="960"/>
	 <gap:splash src="res/screen/ios/640x1136.png" gap:platform="ios" width="640" height="1136"/>
	 <gap:splash src="res/screen/ios/750x1334.png" gap:platform="ios" width="750" height="1334"/>
	 <gap:splash src="res/screen/ios/768x1024.png" gap:platform="ios" width="768" height="1024"/>
	 <gap:splash src="res/screen/ios/1024x768.png" gap:platform="ios" width="1024" height="768"/>
	 <gap:splash src="res/screen/ios/1242x2208.png" gap:platform="ios" width="1242" height="2208"/>

	 <gap:splash src="res/screen/ios/480x320.png" gap:platform="ios" width="480" height="320"/>
	 <gap:splash src="res/screen/ios/960x640.png" gap:platform="ios" width="960" height="640"/>
	 <gap:splash src="res/screen/ios/1024x768.png" gap:platform="ios" width="1024" height="768"/>
	 <gap:splash src="res/screen/ios/1136x640.png" gap:platform="ios" width="1136" height="640"/>
	 <gap:splash src="res/screen/ios/1334x750.png" gap:platform="ios" width="1334" height="750"/>
	 <gap:splash src="res/screen/ios/2048x1536.png" gap:platform="ios" width="2048" height="1536"/>
	 <gap:splash src="res/screen/ios/2208x1242.png" gap:platform="ios" width="2208" height="1242"/>

	
	<platform name="android" >
	 	<preference name="StatusBarOverlaysWebView" value="false"/>
		<preference name="StatusBarBackgroundColor" value="#0474AA"/>
		<preference name="StatusBarStyle" value="default" />
		<preference name="permissions" value="none"/>
		<preference name="EnableViewportScale" value="false"/>
		<preference name="webviewbounce" value="true" />
		<preference name="prerendered-icon" value="true" />
		<preference name="stay-in-webview" value="false" />
		<preference name="DisallowOverscroll" value="true"/>
		<preference name="PageLength" value="0"/>
		<preference name="PaginationBreakingMode" value="page"/>
		<preference name="PaginationMode" value="unpaginated"/>
		<preference name="UIWebViewDecelerationSpeed" value="fast"/>
  	<preference name="orientation" value="portrait" />


		<icon src="res/icon/android/icon-48-mdpi.png" platform="android" qualifier="mdpi" />
		<icon src="res/icon/android/icon-72-hdpi.png" platform="android" qualifier="hdpi" />
		<icon src="res/icon/android/icon-96-xhdpi.png" platform="android" qualifier="xhdpi" />
		<icon src="res/icon/android/icon-144-xxhdpi.png" platform="android" qualifier="xxhdpi" />
    <icon src="res/icon/android/icon-192-xxxhdpi.png" platform="android" qualifier="xxxhdpi" />
		<icon src="res/icon/android/icon-512-fr-xxhdpi.png" platform="android" qualifier="fr-xxhdpi" />

		<!-- you can use any density that exists in the Android project -->
		<splash src="res/screen/android/800x480.png" density="land-hdpi"/>
		<splash src="res/screen/android/320x200.png" density="land-ldpi"/>
		<splash src="res/screen/android/480x320.png" density="land-mdpi"/>
		<splash src="res/screen/android/1280x720.png" density="land-xhdpi"/>

		<splash src="res/screen/android/480x800.png" density="port-hdpi"/>
		<splash src="res/screen/android/200x320.png" density="port-ldpi"/>
		<splash src="res/screen/android/320x480" density="port-mdpi"/>
		<splash src="res/screen/android/720x1280.png" density="port-xhdpi"/>

	</platform>

  <name>Domino's Pizza Pakistan</name>
    <description>Ordering your favorite pizza has never been easier.</description>
    <author href="http://dominos.com.pk/" email="anum.ishtiaq@bramerz.pk">Anum Ishtiaq</author>
	<preference name="prerendered-icon" value="true"/>
	<access origin="*" />
    <content src="index.html" />
</widget>